{
  "name": "pantheon-systems/example-drops-7-composer",
  "description": "Install drops-7 with Composer on Pantheon.",
  "type": "project",
  "license": "MIT",
  "repositories": {
    "drupal": {
      "type": "composer",
      "url":  "https://packages.drupal.org/7"
    },
    "drops": {
      "type": "vcs",
      "url": "https://github.com/pantheon-systems/drops-7-composer"
    }
  },
  "require": {
    "php": ">=5.2.5",
    "ext-gd": "*",
    "ext-xml": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-curl": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "composer/installers": "^1.0",
    "rvtraveller/qs-composer-installer": "^1.1",
    "cweagans/composer-patches": "^1.0",
    "derhasi/composer-preserve-paths": "0.1.*",
    "drupal/composer_autoloader": "1.*",

    "pantheon-systems/drops-7-composer": "7.*",

    "drush/drush": "^8",
    "drupal/admin_menu": "^3.0@RC",
    "drupal/ajax_comments": "^1.3",
    "drupal/auto_entitylabel": "^1.4",
    "drupal/backup_migrate": "^3.3",
    "drupal/batch_add_terms": "^1.1",
    "drupal/better_exposed_filters": "^3.5",
    "drupal/betterlogin": "^1.4",
    "drupal/bodyclasses": "^1.1",
    "drupal/cer": "^3.0@beta",
    "drupal/computed_field": "^1.1",
    "drupal/conditional_fields": "^3.0@alpha",
    "drupal/crumbs": "^2.6",
    "drupal/ctools": "^1.12",
    "drupal/date": "^2.10",
    "drupal/datereminder": "^1.13",
    "drupal/ddf": "^1.8",
    "drupal/devel": "^1.5",
    "drupal/ds": "^2.14",
    "drupal/ds_bootstrap_layouts": "^3.1",
    "drupal/editablefields": "^1.0@alpha",
    "drupal/editableviews": "^1.0@beta",
    "drupal/empty_fields": "^2.0",
    "drupal/entity": "^1.8",
    "drupal/entityreference": "^1.5",
    "drupal/entityreference_backreference": "^1.0@beta",
    "drupal/eva": "^1.3",
    "drupal/ez_timezone_select": "^1.0",
    "drupal/field_formatter_settings": "^1.1",
    "drupal/field_group": "^1.6",
    "drupal/field_group_table": "^1.6",
    "drupal/field_permissions": "^1.0",
    "drupal/field_token_value": "^1.1",
    "drupal/file_entity": "^2.15",
    "drupal/file_entity_preview": "^1.0",
    "drupal/filefield_sources": "^1.10",
    "drupal/filefield_sources_plupload": "^1.1",
    "drupal/fpa": "^2.6",
    "drupal/front": "^2.4",
    "drupal/group": "^1.0@beta",
    "drupal/hook_post_action": "^1.0@beta",
    "drupal/inline_entity_display": "^1.0@beta",
    "drupal/inline_entity_form": "^1.8",
    "drupal/job_scheduler": "^2.0@alpha",
    "drupal/jquery_ui_multiselect": "^1.0",
    "drupal/jquery_update": "^2.7",
    "drupal/json_editor": "^1.2",
    "drupal/jsonb": "^1.0@beta",
    "drupal/libraries": "^2.3",
    "drupal/plupload": "^1.7",
    "drupal/quicktabs": "^3.8",
    "drupal/relation": "^1.1",
    "drupal/replicate": "^1.2",
    "drupal/replicate_ui": "^1.5",
    "drupal/require_login": "^2.6",
    "drupal/rules": "^2.10",
    "drupal/rules_conditional": "^1.0@beta",
    "drupal/sendgrid_integration": "^1.2",
    "drupal/sheetnode": "^1.0@beta",
    "drupal/slack": "^1.6",
    "drupal/smtp": "^1.7",
    "drupal/stringoverrides": "^1.8",
    "drupal/taxonomy_manager": "^1.0",
    "drupal/term_merge": "^1.4",
    "drupal/themekey": "^3.4",
    "drupal/timeago": "^2.3",
    "drupal/timezone_picker": "^1.1",
    "drupal/token": "^1.7",
    "drupal/token_filter": "^1.1",
    "drupal/user_import": "^3.2",
    "drupal/user_permissions": "^1.3",
    "drupal/value_is": "^1.10",
    "drupal/views": "^3.18",
    "drupal/views_between_dates_filter": "^1.0",
    "drupal/views_bootstrap": "^3.2",
    "drupal/views_bulk_operations": "^3.4",
    "drupal/views_data_export": "^3.2",
    "drupal/views_pdf": "^1.7",
    "drupal/views_popup": "^3.0",
    "drupal/content_type_clone": "dev-1.x",
    "drupal/feeds_httpfetcher_append_headers": "dev-1.x",
    "drupal/feedspreview": "dev-1.x",
    "drupal/module_builder": "dev-2.x",
    "drupal/pdf_export": "dev-1.x",
    "drupal/node_authored_select": "^1.4",
    "drupal/override_node_options": "^1.13",
    "drupal/bulk_author_update": "^1.7",
    "drupal/fc": "^1.0@RC",
    "drupal/feed_import": "^3.4",
    "drupal/feeds": "^2.0@beta",
    "drupal/feeds_ex": "^1.0@beta",
    "drupal/feeds_httpfetcher_aa": "^1.0@RC",
    "drupal/feeds_selfnode_processor": "^1.0@beta",
    "drupal/feeds_tamper": "^1.2",
    "drupal/mailsystem": "^2.34",
    "drupal/media": "^2.14",
    "drupal/mimemail": "^1.0",
    "drupal/module_filter": "^2.1",
    "drupal/node_clone": "^1.0",
    "drupal/pathauto": "*",
    "drupal/taxonomy_comment": "dev-1.x",
    "drupal/maillog": "^1.0@alpha",
    "drupal/feeds_jsonpath_parser": "^1.0"
  },
  "require-dev": {
    "mikey179/vfsstream": "^1.2",
    "behat/behat": "3.*",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.2",
    "behat/mink-goutte-driver": "^1.2",
    "jcalderonzumba/gastonjs": "^1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
    "drupal/drupal-extension": "^3.1",
    "drush-ops/behat-drush-endpoint": "^0.0.4",
    "pantheon-systems/quicksilver-pushback": "~1",
    "phpunit/phpunit": "^4.8",
    "symfony/css-selector": "^2.8"
  },
  "conflict": {
    "drupal/core": "8.*"
  },
  "config": {
    "vendor-dir": "vendor"
  },
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "build-assets": [
      "./scripts/composer/install-or-update"
    ],
    "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon"
  },
  "extra": {
    "installer-paths": {
      "web/": ["type:drupal-core"],
      "web/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
      "web/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"],
      "web/sites/all/libraries/{$name}/": ["type:drupal-library"],
      "web/sites/all/drush/{$name}/": ["type:drupal-drush"],
      "web/profiles/{$name}/": ["type:drupal-profile"]
    },
    "preserve-paths": [
      "web/sites/all/modules/contrib",
      "web/sites/all/themes/contrib",
      "web/sites/all/libraries",
      "web/sites/all/drush",
      "web/sites/default/settings.php",
      "web/sites/default/files",
      "web/sites/all/themes/custom",
      "web/sites/all/modules/custom"
    ],
    "build-env": {
      "install-cms": [
        "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
      ]
    }
  }
}
